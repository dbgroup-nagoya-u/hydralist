{
  // editor settings
  "editor.rulers": [
    88,
    100
  ],
  "editor.renderControlCharacters": true,
  "editor.renderWhitespace": "all",
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  // files settings
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/build": true,
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.hg/store/**": true,
  },
  // unit test settings
  "testMate.cpp.test.runtimeLimit": 60,
  "testMate.cpp.test.executables": "build/**/test/*_test",
  // cmake settings
  "cmake.configureOnOpen": true,
  "cmake.buildDirectory": "${workspaceRoot}/build/${buildType}",
  "cmake.generator": "Ninja",
  // Markdown settings
  "[markdown]": {
    "editor.tabSize": 4,
    "files.trimTrailingWhitespace": false,
  },
  "markdown.extension.list.indentationSize": "inherit",
  "markdown.extension.tableFormatter.enabled": false,
  "markdown.extension.toc.levels": "1..3",
  // local dictionary
  "cSpell.words": [
    "ajit",
    "alignas",
    "B_TREE",
    "bsrl",
    "cmpeq",
    "ctest",
    "DBUILD",
    "DCMAKE",
    "dltime",
    "gflags",
    "GLOG",
    "gtest",
    "HYDRALIST",
    "HYDRALISTAPI",
    "jigu",
    "libgflags",
    "LINKEDLIST",
    "loadu",
    "lockfree",
    "mavx",
    "mimalloc",
    "NOLINT",
    "Oplog",
    "permuter",
    "pthread",
    "rdtscp",
    "sltime",
    "spsc",
    "tacc",
    "Wextra"
  ],
  //
  "files.associations": {},
}
